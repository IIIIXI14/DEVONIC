{
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "installCommand": "npm install -g pnpm && pnpm install",
  "framework": "vite",
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NPM_CONFIG_PACKAGE_MANAGER": "pnpm"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "env": {
    "NODE_VERSION": "20",
    "NPM_CONFIG_PACKAGE_MANAGER": "pnpm"
  }
} 